# Production Environment Configuration
# Copy this file to .env.production and update values for your deployment

# Database Configuration
DATABASE_PATH=/app/data/reading-tracker.db

# Server Configuration
PORT=3000
NODE_ENV=production

# Logging Configuration
LOG_LEVEL=info
LOG_TO_FILE=true
LOGS_PATH=/app/logs

# Raspberry Pi Configuration
RASPBERRY_PI=true

# Frontend Configuration (update with your Pi's IP or domain)
VITE_API_URL=http://your-pi-ip:3000/api

# Optional: Backup and import paths
# DATA_BACKUP_PATH=/app/backups
# IMPORT_PATH=/app/imports